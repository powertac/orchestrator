<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                      http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
                      http://www.springframework.org/schema/context
                      http://www.springframework.org/schema/context/spring-context.xsd">

  <context:component-scan base-package="org.powertac.tournament"/>

  <bean id="actionAccount" scope="session"
        class="org.powertac.tournament.actions.ActionAccount">
  </bean>
  <bean id="actionAdmin" scope="request"
        class="org.powertac.tournament.actions.ActionAdmin">
  </bean>
  <bean id="actionGame" scope="request"
        class="org.powertac.tournament.actions.ActionGame">
  </bean>
  <bean id="actionIndex" scope="request"
        class="org.powertac.tournament.actions.ActionIndex">
  </bean>
  <bean id="actionOverview" scope="request"
        class="org.powertac.tournament.actions.ActionOverview">
  </bean>
  <bean id="actionRound" scope="request"
        class="org.powertac.tournament.actions.ActionRound">
  </bean>
  <bean id="actionRounds" scope="request"
        class="org.powertac.tournament.actions.ActionRounds">
  </bean>
  <bean id="actionLevels" scope="request"
        class="org.powertac.tournament.actions.ActionLevels">
  </bean>
  <bean id="actionTournament" scope="request"
        class="org.powertac.tournament.actions.ActionTournament">
  </bean>
  <bean id="actionTournaments" scope="request"
        class="org.powertac.tournament.actions.ActionTournaments">
  </bean>
</beans>