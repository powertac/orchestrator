<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:context="http://www.springframework.org/schema/context"
  xmlns="http://www.springframework.org/schema/beans" xsi:schemaLocation="http://www.springframework.org/schema/beans
                      http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
                      http://www.springframework.org/schema/context
                      http://www.springframework.org/schema/context/spring-context.xsd">

  <context:component-scan base-package="org.powertac.experiment" />

  <!-- TODO Check if needed -->
  <bean id="actionAccount" scope="session"
    class="org.powertac.experiment.actions.ActionAccount"/>
  <bean id="actionAdmin" scope="request"
    class="org.powertac.experiment.actions.ActionAdmin"/>
  <bean id="actionIndex" scope="request"
    class="org.powertac.experiment.actions.ActionIndex"/>
  <bean id="actionOverview" scope="request"
    class="org.powertac.experiment.actions.ActionOverview"/>
</beans>